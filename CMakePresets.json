{
  "version": 6,
  "configurePresets": [
    {
      "name": "build-tests",
      "hidden": true,
      "cacheVariables": {
        "HTRACER_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "build-ray",
      "hidden": true,
      "cacheVariables": {
        "HTRACER_BUILD_RAY": "ON"
      }
    },
    {
      "name": "build-examples",
      "hidden": true,
      "cacheVariables": {
        "HTRACER_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "windows-cl-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-clang-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "msvc-warnings",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_INIT": "/W4 /permissive-",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      }
    },
    {
      "name": "gccclang-warnings",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_INIT": "-Wall -Wextra -pedantic",
        "CMAKE_COMPILE_WARNING_AS_ERROR": "ON"
      }
    },
    {
      "name": "enable-clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--warnings-as-errors=*",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "profile",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dev-x64-win-debug",
      "displayName": "x64 Debug (msvc)",
      "inherits": [
        "x64",
        "windows-cl-base",
        "msvc-warnings",
        "debug",
        "build-ray",
        "build-tests",
        "build-examples",
        "enable-clang-tidy"
      ]
    },
    {
      "name": "dev-x64-win-release",
      "displayName": "x64 Release (msvc)",
      "inherits": [
        "x64",
        "windows-cl-base",
        "msvc-warnings",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-win-profile",
      "displayName": "x64 Profile (msvc)",
      "inherits": [
        "x64",
        "windows-cl-base",
        "msvc-warnings",
        "profile",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-win-clang-debug",
      "displayName": "x64 Debug (clang-cl)",
      "inherits": [
        "x64",
        "windows-clang-base",
        "gccclang-warnings",
        "debug",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-win-clang-release",
      "displayName": "x64 Release (clang-cl)",
      "inherits": [
        "x64",
        "windows-clang-base",
        "gccclang-warnings",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-lin-debug",
      "displayName": "x64 Debug",
      "inherits": [
        "x64",
        "linux-base",
        "gccclang-warnings",
        "debug",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-lin-release",
      "displayName": "x64 Release",
      "inherits": [
        "x64",
        "linux-base",
        "gccclang-warnings",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-lin-profile",
      "displayName": "x64 Profile",
      "inherits": [
        "x64",
        "linux-base",
        "gccclang-warnings",
        "profile",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "ghci-ubuntu",
      "inherits": [
        "x64",
        "linux-base",
        "gccclang-warnings",
        "release",
        "enable-clang-tidy",
        "build-ray",
        "build-tests",
        "build-examples"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++-14"
      }
    },
    {
      "name": "ghci-windows",
      "inherits": [
        "x64",
        "windows-cl-base",
        "msvc-warnings",
        "release",
        "enable-clang-tidy",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    }
  ]
}
