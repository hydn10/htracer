{
  "version": 3,
  "configurePresets": [
    {
      "name": "build-tests",
      "hidden": true,
      "cacheVariables": {
        "HTRACER_BUILD_TESTS": "ON"
      }
    },
    {
      "name": "build-ray",
      "hidden": true,
      "cacheVariables": {
        "HTRACER_BUILD_RAY": "ON"
      }
    },
    {
      "name": "build-examples",
      "hidden": true,
      "cacheVariables": {
        "HTRACER_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "profile",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dev-x64-win-debug",
      "displayName": "x64 Debug",
      "inherits": [
        "x64",
        "windows-base",
        "debug",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-win-release",
      "displayName": "x64 Release",
      "inherits": [
        "x64",
        "windows-base",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-win-profile",
      "displayName": "x64 Profile",
      "inherits": [
        "x64",
        "windows-base",
        "profile",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-lin-debug",
      "displayName": "x64 Debug",
      "inherits": [
        "x64",
        "linux-base",
        "debug",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-lin-release",
      "displayName": "x64 Release",
      "inherits": [
        "x64",
        "linux-base",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "dev-x64-lin-profile",
      "displayName": "x64 Profile",
      "inherits": [
        "x64",
        "linux-base",
        "profile",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    },
    {
      "name": "ghci-ubuntu",
      "inherits": [
        "x64",
        "linux-base",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ],
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++-14"
      }
    },
    {
      "name": "ghci-windows",
      "inherits": [
        "x64",
        "windows-base",
        "release",
        "build-ray",
        "build-tests",
        "build-examples"
      ]
    }
  ]
}
